@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UPC_DropDown.Models.RegisterModel

@{
    Layout = "_LoginLayout";
}

<style>

    .form-control {
        border-radius: 180px;
        padding: 15px 20px;
        font-size: 1rem;
        margin-bottom: 3px;
        border: 2px solid #e0e0e0;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: none;
        }


    .btn-custom {
        background-color: #6a11cb;
        border: none;
        color: white;
        font-size: 1.2rem;
        padding: 10px 20px;
        border-radius: 30px;
        width: 100%;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #2575fc;
            color: white;
        }


</style>

<div class="logo-container">
    <img src="~/css/logo.png" alt="Logo"> <!-- Replace with your logo path -->
</div>
<div class="register-wrapper">
    <div class="register-container">
        <h1 style="color:ghostwhite; margin-bottom:5%; text-align:center">Register</h1>
        <div asp-validation-summary="ModelOnly" class="errorMsg mb-4"></div>
        <form asp-action="SaveUser" asp-controller="Account" method="post">
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserEmail" class="form-control" placeholder="Email" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserPassword" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-custom btn-block">Register</button>
            </div>
            <div class="form-group text-center" style="margin-top:2%; ">
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>
