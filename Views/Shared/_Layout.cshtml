<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MicroShoppingKart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UPC_DropDown.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,1,0" />
    <style>
        .dark-mode {
            background-color: #121212;
            color: white;
        }

        .light-mode {
            background-color: white;
            color: black;
        }

        .navbar-dark-mode {
            background-color: #343a40;
        }

        .navbar-light-mode {
            background-color: white;
            color: black;
        }

        .footer-dark-mode {
            background-color: #343a40;
            color: white;
        }

        .footer-light-mode {
            background-color: #f8f9fa;
            color: black;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark-mode">
            <!-- Logo and Brand Name -->
           <img src="~/css/logo.png" alt="Logo" style="height: 40px; margin-right: 10px; margin-left:50px" /> <!-- Update with your logo path -->
                
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto" style="margin-left:4%">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">Home </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="UsersList">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="ProductsList">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Category" asp-action="CategoriesList">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Charts" asp-action="ChartsList">Charts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">Carts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Order" asp-action="OrderList">Orders</a>
                    </li>
                    <li class="nav-item">
                        <label class="switch" id="themeToggle" onchange="toggleTheme()">
                            <svg xmlns="http://www.w3.org/2000/svg" height="40px" viewBox="0 -960 960 960" width="40px" fill="#FFFFFF"><path d="M280-240q-100 0-170-70T40-480q0-100 70-170t170-70h400q100 0 170 70t70 170q0 100-70 170t-170 70H280Zm-.71-132.67q44.71 0 76.04-31.29 31.34-31.3 31.34-76 0-44.71-31.3-76.04-31.29-31.33-76-31.33-44.7 0-76.04 31.29-31.33 31.3-31.33 76 0 44.71 31.29 76.04 31.3 31.33 76 31.33Z" /></svg>
                        </label>
                    </li>
                    <li class="btn btn-danger" style="margin-left:90%">
                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                            <button type="submit" class="material-symbols-outlined">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted footer-dark-mode">
        <div style="font-weight: bold; font-family: 'Times New Roman', Times, serif; text-decoration: none; margin-left:5%">
                    &copy; 2024 - MICROCARE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            $('#themeToggle').click(function () {
                $('body').toggleClass('dark-mode light-mode');
                $('nav').toggleClass('navbar-dark-mode navbar-light-mode');
                $('footer').toggleClass('footer-dark-mode footer-light-mode');
                $('.container').toggleClass('dark-mode light-mode');
                $('main').toggleClass('dark-mode light-mode');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
